<?php 
/**
 * @file bg_bebritish.module
 */

/**
 * Implements hook_menu().
 */
function bg_bebritish_menu() {
  $items = array();
  $items['bgl/bebritish'] = array(
    'title' => 'BGL BeBritish',
    'page callback' => 'drupal_get_form',
    'page arguments' => array('bg_bebritish_optin_form'),
    'access arguments' => array('administrer bg bebritish'),
    'type' => MENU_NORMAL_ITEM,
    'weight' => -10,
    'file' => 'bg_bebritish.admin.inc',
  );
  $items['bgl/bebritish/optin'] = array(
    'title' => 'Finaliser votre inscription',
    'page callback' => 'bg_bebritish_optin_callback',
    'access callback' => TRUE,
    'type' => MENU_CALLBACK,
  );
  return $items;
}

/**
 * Menu callback.
 */
function bg_bebritish_optin_callback() {
  if (isset($_GET['email']) && isset($_GET['hash']) && ($_GET['hash'] == hash('sha256', $_GET['email']))) {
    if ($account = user_load_by_mail($_GET['email'])) {
      if ($account->status == 0) {
        module_load_include('inc', 'user', 'user.pages');
        return render(drupal_get_form('user_profile_form', $account));
      }
    }
  }
  drupal_set_message(format_string('URL erronée ou compte déjà actif. Visitez !site_web pour tenter de vous connecter.', array('!site_web' => l('http://www.beaugrenelle-paris.com', 'http://www.beaugrenelle-paris.com'))), 'error');
  drupal_goto('<front>');
}

/**
 * Implements hook_form_FORM_ID_alter().
 */
function bg_bebritish_form_user_profile_form_alter(&$form, &$form_state, $form_id) {
  if ('bgl/bebritish/optin' == implode('/', arg())) {
    foreach ($form['account'] as $key => &$field) {
      if (($key != 'pass') && is_array($field)) {
        $field['#access'] = FALSE;
      }
    }
    $form['#validate'][] = 'bg_bebritish_profile_form_validate';
    $form['#submit'][] = 'bg_bebritish_profile_form_submit';
  }
}

function bg_bebritish_profile_form_validate($form, &$form_state) {
  $form_state['values']['status'] = 1;
}

function bg_bebritish_profile_form_submit($form, &$form_state) {
  drupal_set_message(format_string('Félicitations ! Votre compte a été activé. Visitez !site_web pour vous connecter.', array('!site_web' => l('http://www.beaugrenelle-paris.com', 'http://www.beaugrenelle-paris.com'))));
  $form_state['redirect'] = '<front>';
}

/**
 * Implements hook_mail().
 */
function bg_bebritish_mail($key, &$message, $params) {
  switch ($key) {
    case 'optin':
      $landing_page = $params['landing_page'];
      $message['subject'] = 'Beaugrenelle - BeBritish';
      $output = 'Beaugrenelle vous souhaite le bonjour !' . PHP_EOL;
      $output .= PHP_EOL;
      $output .= 'Cliquez sur ce lien pour finaliser votre inscription :' . PHP_EOL;
      $output .= $landing_page . PHP_EOL;
      $output .= PHP_EOL;
      $output .= 'Amicalement,' . PHP_EOL;
      $output .= 'L\'équipe Beaugrenelle.';
      $message['body'][] = $output;
      break;
    default:
      break;
  }
}
